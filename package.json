{
  "name": "twinkle-tray",
  "version": "1.2.2",
  "description": "",
  "main": "src/electron.js",
  "scripts": {
    "parcel": "parcel *.html --port 3000 --out-dir build",
    "parcel-build": "parcel build *.html --out-dir build --public-url ./ --experimental-scope-hoisting",
    "electron-build": "electron-builder",
    "clean-build": "del build/ .cache dist/",
    "build": "npm run parcel-build && npm run electron-build",
    "start": "wait-on http://localhost:3000/index.html && electron . "
  },
  "keywords": [
    "electron",
    "react",
    "brightness",
    "set-brightness",
    "windows"
  ],
  "author": "Xander Frangos",
  "license": "ISC",
  "dependencies": {
    "@hensm/ddcci": "0.0.3",
    "color": "^3.1.2",
    "electron-is-dev": "1.0.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "regedit": "^3.0.3",
    "wmi-client": "^0.5.0"
  },
  "build": {
    "productName": "Twinkle Tray",
    "appId": "com.xanderfrangos.twinkle-tray",
    "files": [
      "src/electron.js",
      "src/preload.js",
      "src/settings-preload.js",
      "src/assets/*",
      "build/**/*"
    ],
    "extraResources": [
      "src/MonitorInfo.exe"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName} v${version}.${ext}",
      "icon": "src/assets/logo.ico"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "6.26.3",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "6.24.1",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "electron": "6.0.1",
    "electron-builder": "20.38.4",
    "electron-rebuild": "^1.8.5",
    "parcel-bundler": "1.12.3",
    "sass": "^1.22.9",
    "wait-on": "3.2.0"
  }
}
